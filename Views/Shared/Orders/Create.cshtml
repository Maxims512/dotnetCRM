@model Order

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" 
               required
               min="0.01"
               step="0.01"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="OrderDate" class="control-label"></label>
        <input asp-for="OrderDate" type="date" class="form-control" 
               required
               max="@DateTime.Today.ToString("yyyy-MM-dd")"/>
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" class="form-control" 
                asp-items="ViewBag.Users" required>
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    
    <div class="form-group d-flex justify-content-between"></div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Создать
        </button>
    </div>
</form>