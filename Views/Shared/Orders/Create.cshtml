@model Order

@{
    ViewData["Title"] = "Создание заказа";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Остальные поля формы -->
            
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                @if (ViewBag.Users != null)
                {
                    <select asp-for="UserId" class="form-control" 
                            asp-items="@(ViewBag.Users as SelectList)">
                        <option value="">-- Выберите пользователя --</option>
                    </select>
                }
                else
                {
                    <div class="alert alert-warning">
                        Нет доступных пользователей. 
                        <a asp-controller="Users" asp-action="Create">Создайте сначала пользователя</a>.
                    </div>
                }
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Создать
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад
                </a>
            </div>
        </form>
    </div>
</div>