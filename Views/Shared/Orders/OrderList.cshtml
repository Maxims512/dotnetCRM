@model IEnumerable<Order>

<div class="table-responsive">
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                <th>@Html.DisplayNameFor(model => model.User)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.OrderDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (item.User != null)
                        {
                            @Html.DisplayFor(modelItem => item.User.FullName)
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Orders" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-primary" title="Редактировать">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-controller="Orders" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-danger" title="Удалить">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">
                    <a asp-action="Create" asp-controller="Orders" 
                       class="btn btn-success mt-3">
                       <i class="fas fa-plus"></i> Создать новый заказ
                    </a>
                </td>
            </tr>
        </tfoot>
    </table>
</div>